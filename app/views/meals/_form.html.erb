<%= form_for [@mealplan, @meal], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :day, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :day, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :breakfast, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :breakfast, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :lunch, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lunch, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :dinner, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :dinner, :class => 'text_field' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                :back, :class => 'btn' %>
  </div>
<% end %>
